# License Plate Recognition System - Environment Variables

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_HOST=0.0.0.0
FLASK_PORT=5000
SECRET_KEY=your-secret-key-change-in-production

# Database Configuration
DATABASE_URL=postgresql://lpr:lpr_password@localhost:5432/lpr_db

# Redis Configuration
REDIS_URL=redis://localhost:6379/0

# Storage Paths
UPLOAD_FOLDER=/app/storage/uploads
DETECTION_FOLDER=/app/storage/detections
LOG_FOLDER=/app/storage/logs

# ML Configuration
USE_GPU=true
DETECTION_CONFIDENCE=0.5
DETECTOR_MODEL_PATH=
OCR_LANGUAGES=en,ar

# Storage Settings
STORAGE_RETENTION_DAYS=30
MAX_CONTENT_LENGTH=16777216
